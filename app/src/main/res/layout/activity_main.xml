<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/message"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/activity_horizontal_margin"
        android:layout_marginTop="@dimen/activity_vertical_margin"
        android:text="@string/title_home" />

    <com.zagori.custombottomnavigation.BottomNav
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"

        app:bn_background_color="@color/colorSecondary"
        app:bn_menu="@menu/bottom_nav_menu"
        app:bn_fab_menu_index="2"

        app:bn_cradle_vertical_offset="0dp"
        app:bn_fab_margin="8dp"
        app:bn_rounded_corner_radius="8dp"
        app:bn_fab_size="50dp"/>

    <!--
    app:itemIconTint="@drawable/bottom_nav_text_state"
    app:itemTextColor="@drawable/bottom_nav_text_state"
    -->

</androidx.coordinatorlayout.widget.CoordinatorLayout>